# Missive API Configuration
MISSIVE_API_TOKEN=your_missive_api_token_here

# Attachment Storage
# Must be an absolute path
ATTACHMENT_STORAGE_PATH=/absolute/path/to/attachments

# Betterstack Logging (optional)
BETTERSTACK_SOURCE_TOKEN=your_betterstack_source_token_here

# Date Filtering (optional)
# Format: DD.MM.YYYY
# Only process emails received on or after this date
MISSIVE_PROCESS_AFTER=01.01.2020

# Polling Configuration (optional)
POLLING_INTERVAL=60

# Advanced Settings (optional)
TIMEZONE=Europe/Berlin
LOG_LEVEL=INFO
BACKFILL_OVERLAP_SECONDS=120
SPOOL_RETRY_SECONDS=60
